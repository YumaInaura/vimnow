#!/usr/bin/env bash -eu

for arg in "$@"; do
  if [ "$arg" = '--version' ]; then
    echo "$VERSION"
    exit
  elif [ "$arg" = '--upgrade' ]; then
    curl 'https://raw.githubusercontent.com/yumainaura/vimnow/master/install.sh?'$((RANDOM))$((RANDOM)) | bash; echo
    exit
  elif [ "$arg" = '--list' ]; then
    find "$(vimnow --save-path)" -maxdepth 1 -type f -printf "%T@ %Tc %p\n"  
   exit
  elif [ "$arg" = '--path' ]; then
    echo "$vimnow_path"
    exit
  elif [ "$arg" = '--save-path' ]; then
    echo "$save_dir"
    exit
  elif [ "$arg" = '--git-init' ]; then
    cd "$save_dir"
    git init
    exit
  fi
done

